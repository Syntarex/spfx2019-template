{
    "compilerOptions": {
        "target": "es5",
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react",
        "allowJs": true,
        "declaration": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./node_modules/@microsoft"],
        "types": ["es6-promise", "webpack-env"],
        "lib": ["es5", "dom", "es2015.collection", "es2015.promise"]
    }
}
